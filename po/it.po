"\tld a, 128 + 16\n"
"\tld [hli], a\n"
"\tld a, 16 + 8\n"
"\tld [hli], a\n"
"\tld a, 0\n"
"\tld [hli], a\n"
"\tld [hl], a\n"
"```"
msgstr "``rgbasm,linenos,start=67\n"
